<%- include('partials/header'); -%>

<body>
  <div class="tm-page-wrap mx-auto">
    <div class="position-relative">
      <div class="position-absolute tm-site-header">
        <div class="container-fluid position-relative">
          <div class="row">
            <div class="col-5 col-md-8 ml-auto mr-0">
              <div class="tm-site-nav">
                <nav class="navbar navbar-expand-lg mr-0 ml-auto" id="tm-main-nav">
                  <button class="navbar-toggler tm-bg-black py-2 px-3 mr-0 ml-auto collapsed" type="button" data-toggle="collapse" data-target="#navbar-nav" aria-controls="navbar-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span>
                      <i class="fas fa-bars tm-menu-closed-icon"></i>
                      <i class="fas fa-times tm-menu-opened-icon"></i>
                    </span>
                  </button>
                  <div class="collapse navbar-collapse tm-nav" id="navbar-nav">
                    <ul class="navbar-nav text-uppercase">
                      <li class="nav-item active">
                        <a class="nav-link tm-nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link tm-nav-link" href="/about">About</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link tm-nav-link" href="/contact">Contact</a>
                      </li>
                    </ul>
                  </div>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="tm-welcome-container text-center text-white">
        <div class="tm-welcome-container-inner">
          <p class="tm-welcome-text mb-1 text-white">Co≈ükun Atak Official Web Site</p>
          <p class="tm-welcome-text mb-5 text-white">See my work, reach me.</p>
          <a href="#content" class="btn tm-btn-animate tm-btn-cta tm-icon-down">
            <span>Get Started</span>
          </a>
        </div>
      </div>

      <div id="tm-video-container">
        <video autoplay muted loop id="tm-video">
          <!-- <source src="video/sunset-timelapse-video.mp4" type="video/mp4"> -->
          <source src="video/wheat-field.mp4" type="video/mp4">
        </video>
      </div>

      <i id="tm-video-control-button" class="fas fa-plus"></i>
    </div>

    <div class="container-fluid">
      <div id="content" class="mx-auto tm-content-container">
        <main>
          <div class="row tm-catalog-item-list">

            <% if(posts){ %>
            <% posts.forEach(function(post){ %>
              <div class="col-lg-4 col-md-6 col-sm-12 tm-catalog-item">
                <div class="position-relative tm-thumbnail-container">
                  <img src="<%= post.imageUrl %>" alt="Image" class="img-fluid tm-catalog-item-img thumbnail" width="400px">
                  <a href="/posts/<%= post._id %>" class="position-absolute tm-img-overlay">
                    <i class="fas fa-play tm-overlay-icon"></i>
                  </a>
                </div>
                <div class="p-4 tm-bg-gray tm-catalog-item-description">
                  <h3 class="tm-text-primary mb-3 tm-catalog-item-title"><%= post.title %></h3>
                  <p class="tm-catalog-item-text"><%= post.content %></p>
                </div>
              </div>
            <% }); %>
            <% } %>

          </div>

          <!-- Catalog Paging Buttons -->
          <!--
          <div>
            <ul class="nav tm-paging-links">
              <li class="nav-item active"><a href="#" class="nav-link tm-paging-link">1</a></li>
              <li class="nav-item"><a href="#" class="nav-link tm-paging-link">2</a></li>
              <li class="nav-item"><a href="#" class="nav-link tm-paging-link">3</a></li>
              <li class="nav-item"><a href="#" class="nav-link tm-paging-link">4</a></li>
              <li class="nav-item"><a href="#" class="nav-link tm-paging-link">></a></li>
            </ul>
          </div>
          -->
        </main>

        <%- include('partials/footer'); -%>
      </div> <!-- tm-content-container -->
    </div>

  </div> <!-- .tm-page-wrap -->

  <script src="js/jquery-3.4.1.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/pages/index.js" charset="utf-8"></script>
</body>

</html>
